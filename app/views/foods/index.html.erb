<div class="container">
  <div class="row justify-content-end mt-3">
    <div class="col-4">
      <%= link_to "Add Food", new_food_path, class: "btn btn-secondary" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-8">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Measurement Unit</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th> <!-- Add the "Actions" column header -->
          </tr>
        </thead>
        <tbody>
          <% @foods.each do |food| %>
            <tr>
              <td><%= food.name %></td>
              <td><%= food.measurement_unit %></td>
              <td>$<%= food.price %></td>
              <td><%= food.quantity %></td>
              <td>
                <%= button_to "Delete", food_path(food), method: :delete, data: { confirm: "Are you sure you want to delete this food?" }, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
