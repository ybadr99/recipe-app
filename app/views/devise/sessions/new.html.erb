<section class="vh-100" style="background-color: #508bfc;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h2 class="fw-bold mb-2">Log in</h2>
            <p class="text-black-50 mb-5">Please enter your login and password!</p>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-outline mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"form-control" %>
                <% if resource.errors.has_key?(:email) %>
                  <span class="text-danger mb-0"><%= resource.errors[:email].first %></span>
                <% end %>
              </div>

              <div class="form-outline mb-4">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"form-control" %>
              </div>

              <% if alert %>
                <p class="text-danger"><%= alert %></p>
              <% end %>

              <div class="row mb-4">
                <% if devise_mapping.rememberable? %>
                  <div class="col d-flex justify-content-center">
                    <div class="form-check">
                      <%= f.check_box :remember_me %> 
                      <%= f.label :remember_me, class:"remember" %>
                    </div>
                  </div>
                <% end %>
              </div>

              <div class="d-grid">
                <%= f.submit "Log in", class:"btn btn-secondary btn-lg mb-2" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
