<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 mt-4 p-2">
      <h3 class="text-center mb-5">
        Shopping List
      </h3>

      <% if @shopping_list.empty? %>
        <p class="alert alert-info">
          There is no missing food.
        </p>
      <% elsif @shopping_list.any? %>
        <div class="d-flex justify-content-between mb-3 px-5 fw-bold">
          <span>
            Amount of food items to buy: <%= @shopping_list.size %>
          </span>
          <span>
            Total value of food needed: <%= @shopping_list.sum(&:price) %>
          </span>
        </div>
        <div class="d-flex justify-content-center">
          <div class="col-md-10">
            <hr>
            <table class="table table-striped table-ligth table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Food</th>
                  <th class="w-25 text-center">Quantity</th>
                  <th class="w-25 text-center">Unit Price</th>
                </tr>
              </thead>
              <tbody>
                <% @shopping_list.each_with_index do |food, index| %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= food.name %></td>
                    <td class="text-center">
                      <%= food.quantity %>
                      <%= food.measurement_unit %>
                    </td>
                    <td class="text-center"><%= food.price %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>
    </div>
  </div>     
</div>
